@using ShopNowBL.Models
@model List<tblStock>
@{
    ViewBag.Title = "ListProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List Product</h2>


@Html.ActionLink("Add New Product", "AddProduct", "Stocks", new { @class = "btn btn-primary" })
<br />
<br />

<table class="table table-bordered table-condensed table-hover">
    <tr>
        <th>Product ID</th>
        <th>Product Name</th>
        <th>Quantity</th>
        <th>Base Price</th>
        <th>Selling Price</th>
        <th>Discount</th>
        <th>Created By</th>
        <th>Created Date</th>
        <th>Update</th>
        <th>Delete</th>
    </tr>

    @foreach (var product in Model)
    {
        <tr>
            <td>@product.Id</td>
            <td>@product.ProductName</td>
            <td>@product.ProductQty</td>
            <td>@product.BasePrice</td>
            <td>@product.SellingPrice</td>
            <td>@product.Discount</td>
            <td>@product.CreatedBy</td>
            <td>@product.CreatedDate</td>
            <td><a href=@Url.Action("Details","Stocks",new {id=product.Id})>Edit</a></td>
            <td>
                <a href=@Url.Action("Delete","Stocks",new {id=product.Id})
                   new { onclick="return confirm('Are you sure want to delete?');" }>Delete</a>
            </td>
        </tr>
    }
</table>

