@model ShowNow.ViewModels.StoreAndStock

<div>
    <h2>Stores</h2>
    <table class="table table-bordered table-condensed table-hover">
        <tr>
            <th>Store ID</th>
            <th>Store Name</th>
            <th>Address</th>
            <th>City</th>
            <th>Contact No</th>
            <th>Started Date</th>
            <th>Created By</th>
            <th>Created Date</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>

        @foreach (var item in Model.lstStores)
        {
    <tr>
        <td>@item.Id</td>
        <td>@item.StoreName</td>
        <td>@item.Address</td>
        <td>@item.City</td>
        <td>@item.ContactNo</td>
        <td>@item.StartedDate</td>
        <td>@item.CreatedBy</td>
        <td>@item.CreatedDate</td>
        <td><a href="#" onclick="GetStore(@item.Id)">Update</a></td>
        <td><a href="#" onclick="DeleteStore(@item.Id)">Delete</a></td>
    </tr>
        }
    </table>
</div>
<div>
    <h2>Stocks</h2>
    <table class="table table-bordered table-condensed table-hover">
        <tr>
            <th>Product ID</th>
            <th>Product Name</th>
            <th>Quantity</th>
            <th>Base Price</th>
            <th>Selling Price</th>
            <th>Discount</th>
            <th>Created By</th>
            <th>Created Date</th>
           
        </tr>

        @foreach (var product in Model.lstStocks)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.ProductName</td>
                <td>@product.ProductQty</td>
                <td>@product.BasePrice</td>
                <td>@product.SellingPrice</td>
                <td>@product.Discount</td>
                <td>@product.CreatedBy</td>
                <td>@product.CreatedDate</td>
                
            </tr>
        }
    </table>


</div>

